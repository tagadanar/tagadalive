			Stats.ABSSHIELD: 1.0, Stats.RELSHIELD: 1.2, Stats.DMGRETURN: 0.6,
			Stats.STR: 0.4, Stats.MGC: 0.2, Stats.RST: 0.1,
			Stats.WSD: 0.1, Stats.AGI: 0.1,
