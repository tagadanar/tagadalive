class EffectOverTime{
	Item item
	integer value
	integer duration
	integer effectType  // EFFECT_POISON, EFFECT_BUFF_STRENGTH, etc.

	constructor(Item item, integer value, integer duration, integer effectType){
		this.item = item
		this.value = value
		this.duration = duration
		this.effectType = effectType
	}

	constructor(EntityEffect effect){
		this.item = effect.item
		this.value = effect.value * TargetType.CONVERTER[effect.type] // so malus is negative
		this.duration = effect.turns
		this.effectType = effect.type
	}

	string string(){
		return '<EffectOverTime '+this.item+'\n|value: '+this.value+' |duration: '+this.duration+' |type: '+this.effectType+'>'
	}
}