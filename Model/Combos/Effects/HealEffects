/**
 * HealEffects - Thin wrappers for Consequences that delegate to EffectHandlers.
 *
 * De-dupe for non-stackable effects is handled centrally in EffectHandlers.
 *
 * Handles: EFFECT_HEAL, EFFECT_BOOST_MAX_LIFE, EFFECT_NOVA_VITALITY, EFFECT_RAW_HEAL
 */

// Register all heal effect handlers
Consequences.registerHandlers([
	EFFECT_HEAL: (ItemEffect effect, Entity entitySource, Entity entityTarget, real ratioDmg, Consequences conseq) => void {
		EffectHandlers.heal(effect, entitySource, entityTarget, ratioDmg, entitySource.getCurrentWsd(conseq), entityTarget.getCurrentHPMissing(conseq), conseq)
	},

	EFFECT_BOOST_MAX_LIFE: (ItemEffect effect, Entity entitySource, Entity entityTarget, real ratioDmg, Consequences conseq) => void {
		EffectHandlers.boostMaxLife(effect, entitySource, entityTarget, ratioDmg, entitySource.getCurrentWsd(conseq), conseq)
	},

	EFFECT_NOVA_VITALITY: (ItemEffect effect, Entity entitySource, Entity entityTarget, real ratioDmg, Consequences conseq) => void {
		EffectHandlers.novaVitality(effect, entitySource, entityTarget, ratioDmg, entitySource.getCurrentSnc(conseq), conseq)
	},

	EFFECT_RAW_HEAL: (ItemEffect effect, Entity entitySource, Entity entityTarget, real ratioDmg, Consequences conseq) => void {
		EffectHandlers.rawHeal(effect, entitySource, entityTarget, ratioDmg, entityTarget.getCurrentHPMissing(conseq), conseq)
	}
])
