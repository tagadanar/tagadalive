/*
 * BulbStats - Computed stats for a bulb based on summoner level
 */
class BulbStats {
	integer life
	integer str
	integer agi
	integer mp
	integer tp
	integer snc  // science
	integer wsd  // wisdom
	integer mgc  // magic
	integer rst  // resistance

	constructor(integer life, integer str, integer agi, integer mp, integer tp, integer snc, integer wsd, integer mgc, integer rst) {
		this.life = life
		this.str = str
		this.agi = agi
		this.mp = mp
		this.tp = tp
		this.snc = snc
		this.wsd = wsd
		this.mgc = mgc
		this.rst = rst
	}

	BulbStats clone() {
		return BulbStats(this.life, this.str, this.agi, this.mp, this.tp, this.snc, this.wsd, this.mgc, this.rst)
	}

	// Apply buffs and return new stats (requires Buff class)
	BulbStats withBuffs(Array<Buff> buffs) {
		BulbStats result = this.clone()
		for (Buff buff in buffs) {
			result.str += buff.strBoost
			result.tp += buff.tpBoost
			result.mp += buff.mpBoost
			result.agi += buff.agiBoost
			result.mgc += buff.mgcBoost
		}
		return result
	}

	string string() {
		return "<BulbStats life=" + this.life + " str=" + this.str + " agi=" + this.agi + " mp=" + this.mp + " tp=" + this.tp + " snc=" + this.snc + " wsd=" + this.wsd + " mgc=" + this.mgc + " rst=" + this.rst + ">"
	}
}
