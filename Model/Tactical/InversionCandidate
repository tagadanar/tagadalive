/*
 * InversionCandidate - Result of CHIP_INVERSION target evaluation
 * Represents a valid swap target with the closest cell to cast from.
 */
class InversionCandidate {
	Cell fromCell       // Cell to stand on to cast inversion
	Entity target       // Entity to swap positions with
	Cell targetCell     // Target's cell (where self ends up after swap)
	integer mpCost      // MP to reach fromCell (0 if already in range)
	real score          // Tactical value (danger reduction for allies, 0 for enemies)

	constructor(Cell fromCell, Entity target, Cell targetCell, integer mpCost, real score) {
		this.fromCell = fromCell
		this.target = target
		this.targetCell = targetCell
		this.mpCost = mpCost
		this.score = score
	}

	string string() {
		return "<Inversion from c" + this.fromCell.id + " -> " + this.target.name + "@c" + this.targetCell.id + " mp=" + this.mpCost + " score=" + round(this.score) + ">"
	}
}
